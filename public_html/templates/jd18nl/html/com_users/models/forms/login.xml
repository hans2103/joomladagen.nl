<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="credentials" label="COM_USERS_LOGIN_DEFAULT_LABEL">
        <field
                name="username"
                type="text"
                label="COM_USERS_LOGIN_USERNAME_LABEL"
                hint="COM_USERS_LOGIN_USERNAME_LABEL"
                class="form-input validate-username"
                filter="username"
                size="25"
                required="true"
                validate="username"
                autofocus="true"
        />

        <field
                name="password"
                type="password"
                label="JGLOBAL_PASSWORD"
                hint="JGLOBAL_PASSWORD"
                class="form-input validate-password"
                required="true"
                filter="raw"
                size="25"
        />
    </fieldset>

    <field
            name="secretkey"
            type="text"
            label="JGLOBAL_SECRETKEY"
            class=""
            filter="int"
            size="25"
    />

    <fieldset>
        <field
                name="return"
                type="hidden"
        />
    </fieldset>
</form>
