<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="title"
				type="text"
				label="COM_JTICKETING_TICKET_TITLE"
				required="true"
				class="required"
				description="COM_JTICKETING_TICKET_TITLE_DESC"
				size="40"
				validation="required"
				/>

		<field
				name="desc"
				type="textarea"
				label="COM_JTICKETING_TICKET_DESCRIPTION"
				description="COM_JTICKETING_TICKET_DESCRIPTION_DESC"
				class="inputbox"
				/>

		<field name="state" type="list" default="1" label="JSTATUS" description="COM_JTICKETING_TICKET_STATE_DESC" class="btn btn-group-yesno">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field
				name="price"
				type="text"
				label="COM_JTICKETING_TICKET_PRICE"
				description="COM_JTICKETING_TICKET_PRICE_DESC"
				size="40"
				class="inputbox validate-numeric required"
				required="true"
				filter="integer"
				default="0"
				/>

				<field name="unlimited_seats" type="list" default="1" label="COM_JTICKETING_TICKET_SEATS_AVAILABLE_LABEL" description="COM_JTICKETING_TICKET_SEATS_AVAILABLE_DESC" class="btn btn-group-yesno">
					<option value="1">COM_JTICKETING_TICKET_UNLIMITED_SEATS_YES</option>
					<option value="0">COM_JTICKETING_TICKET_UNLIMITED_SEATS_NO</option>
				</field>

			<field
				name="available"
				type="text"
				label="COM_JTICKETING_TICKET_NO_OF_SEATS"
				description="COM_JTICKETING_TICKET_NO_OF_SEATS_DESC"
				showon="unlimited_seats:0"
				size="20"
				class="inputbox validate-numeric"
				default=""
				/>
				<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC" size="1" />
	</fieldset>
</form>
