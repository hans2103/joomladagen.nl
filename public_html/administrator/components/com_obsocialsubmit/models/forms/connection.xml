<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			default="0"
			readonly="true"
		/>
		
		<field name="addon" type="hidden"
			description="COM_OBSOCIALSUBMIT_FIELD_ADDON_DESC"
			label="COM_OBSOCIALSUBMIT_FIELD_ADDON_LABEL"
			readonly="readonly"
			size="20"
		/>
		
		<field name="addon_type" type="hidden"
			default="extern"
			description="COM_OBSOCIALSUBMIT_FIELD_ADDON_DESC"
			label="COM_OBSOCIALSUBMIT_FIELD_ADDON_LABEL"
			readonly="readonly"
		/>

		<field name="title" type="text"
			description="COM_OBSOCIALSUBMIT_FIELD_TITLE_DESC"
			label="JGLOBAL_TITLE"
			maxlength="100"
			required="true"
			size="35"
		/>

		<field name="description" type="textarea"
			default=""
			description="COM_OBSOCIALSUBMIT_FIELD_DESCRIPTION_DESC"
			label="COM_OBSOCIALSUBMIT_FIELD_DESCRIPTION_LABEL">
		</field>

		<field name="published" type="radio"
			class="btn-group"
			default="1"
			description="COM_OBSOCIALSUBMIT_FIELD_PUBLISHED_DESC"
			label="JSTATUS"
			size="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="ordering" type="moduleorder"
			description="JFIELD_ORDERING_DESC"
			label="JFIELD_ORDERING_LABEL"
		/>
	</fieldset>
</form>