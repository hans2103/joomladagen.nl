<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="ems">

		<field name="psp-spacer" type="spacer" label="COM_JDIDEALGATEWAY_SPACER_PSP" />

		<field name="testmode"
			type="radio"
			label="COM_JDIDEALGATEWAY_TEST_MODE_LABEL"
			description="COM_JDIDEALGATEWAY_TEST_MODE_DESC"
			required="true"
			default="1"
			class="btn-group btn-group-yesno"
			labelclass="config">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="storeName"
			type="text"
			label="COM_JDIDEALGATEWAY_EMS_STORENAME_LABEL"
			description="COM_JDIDEALGATEWAY_EMS_STORENAME_DESC"
			required="true"
			size="25"
			labelclass="config" />

		<field name="sharedSecret"
			type="text"
			label="COM_JDIDEALGATEWAY_EMS_SHAREDSECRET_LABEL"
			description="COM_JDIDEALGATEWAY_EMS_SHAREDSECRET_DESC"
			required="true"
			size="30"
			labelclass="config" />

		<field name="redirect"
			   type="jdideal.waitoptions"
			   label="COM_JDIDEALGATEWAY_WAIT_TIME_LABEL"
			   description="COM_JDIDEALGATEWAY_WAIT_TIME_DESC"
			   required="true"
			   size="1"
			   class="advancedSelect"
			   labelclass="config"/>

		<field name="payment"
			type="list"
			label="COM_JDIDEALGATEWAY_EMS_PAYMENT_LABEL"
			description="COM_JDIDEALGATEWAY_EMS_PAYMENT_DESC"
			required="true"
			default=""
			multiple="false"
			size="1"
			class="advancedSelect"
			labelclass="config">
			<option value="M">COM_JDIDEALGATWAY_PAYMENT_METHOD_MASTERCARD</option>
			<option value="V">COM_JDIDEALGATWAY_PAYMENT_METHOD_VISA</option>
			<option value="A">COM_JDIDEALGATWAY_PAYMENT_METHOD_AMEX</option>
			<option value="C">COM_JDIDEALGATWAY_PAYMENT_METHOD_DINERSCLUB</option>
			<option value="J">COM_JDIDEALGATWAY_PAYMENT_METHOD_JCB</option>
			<option value="ideal">COM_JDIDEALGATWAY_PAYMENT_METHOD_IDEAL</option>
			<option value="klarna">COM_JDIDEALGATWAY_PAYMENT_METHOD_KLARNA</option>
			<option value="MA">COM_JDIDEALGATWAY_PAYMENT_METHOD_MAESTRO</option>
			<option value="maestroUK">COM_JDIDEALGATWAY_PAYMENT_METHOD_MAESTROUK</option>
			<option value="masterpass">COM_JDIDEALGATWAY_PAYMENT_METHOD_MASTERPASS</option>
			<option value="paypal">COM_JDIDEALGATWAY_PAYMENT_METHOD_PAYPAL</option>
			<option value="sofort">COM_JDIDEALGATWAY_PAYMENT_METHOD_SOFORT</option>
		</field>

		<field name="timezone"
			   type="list"
			   label="COM_JDIDEALGATEWAY_EMS_TIMEZONE_LABEL"
			   description="COM_JDIDEALGATEWAY_EMS_TIMEZONE_DESC"
			   required="true"
			   default="Europe/Amsterdam"
			   multiple="false"
			   size="1"
			   class="advancedSelect"
			   labelclass="config">
			<option value="Africa/Johannesburg">COM_JDIDEALGATEWAY_TIMEZONE_JOHANNESBURG</option>
			<option value="America/New_York">COM_JDIDEALGATEWAY_TIMEZONE_NEWYORK</option>
			<option value="America/Sao_Paulo">COM_JDIDEALGATEWAY_TIMEZONE_SAOPAULO</option>
			<option value="Asia/Calcutta">COM_JDIDEALGATEWAY_TIMEZONE_CALCUTTA</option>
			<option value="Australia/Sydney">COM_JDIDEALGATEWAY_TIMEZONE_SYDNEY</option>
			<option value="Europe/Amsterdam">COM_JDIDEALGATEWAY_TIMEZONE_AMSTERDAM</option>
			<option value="Europe/Berlin">COM_JDIDEALGATEWAY_TIMEZONE_BERLIN</option>
