    <authorUrl>https://extensions.perfectwebteam.com</authorUrl>
    <version>1.0.0</version>
    <description>PLG_PWTIMAGE_XML_DESCRIPTION</description>

    <scriptfile>script.php</scriptfile>

    <files>
        <filename plugin="pwtimage">pwtimage.php</filename>
        <folder>language</folder>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="showFolder"
                        type="radio"
                        label="PLG_PWTIMAGE_CONFIG_SHOWFOLDER_LABEL"
                        description="PLG_PWTIMAGE_CONFIG_SHOWFOLDER_DESC"
                        default="0"
                        class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                        name="showTools"
                        type="radio"
                        label="PLG_PWTIMAGE_FIELD_SHOWTOOLS_LABEL"
                        description="PLG_PWTIMAGE_FIELD_SHOWTOOLS_DESC"
                        default="1"
                        class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
<!--
                <field
                        name="showGallery"
                        type="radio"
                        label="PLG_PWTIMAGE_FIELD_GALLERY_LABEL"
                        description="PLG_PWTIMAGE_FIELD_GALLERY_DESC"
                        default="0"
                        class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
-->
                <field
                        name="showHelp"
                        type="radio"
                        label="PLG_PWTIMAGE_FIELD_SHOWHELP_LABEL"
                        description="PLG_PWTIMAGE_FIELD_SHOWHELP_DESC"
                        default="1"
                        class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
