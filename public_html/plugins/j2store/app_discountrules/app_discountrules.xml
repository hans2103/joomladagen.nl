<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="j2store" method="upgrade">
    <name>Discount Rules</name>
    <version>1.0.2</version>
    <creationDate>JAN 2018</creationDate>
    <author>Alagesan</author>
    <authorEmail>supports@j2store.org</authorEmail>
    <authorUrl>http://www.j2store.org</authorUrl>
    <copyright>2018 Cartrabbit International Pte Ltd</copyright>
    <license>GNU General Public License v3 or later</license>
    <description>The app used to set discount rule of J2Store</description>
    <scriptfile>script.app_discountrules.php</scriptfile><!-- SQL query files to execute on installation -->
    <files>
        <filename plugin="app_discountrules">app_discountrules.php</filename>
        <folder>app_discountrules</folder>
        <folder>languages</folder>
        <filename>index.html</filename>
    </files>
    <languages>
        <language tag="en-GB">languages/en-GB.plg_j2store_app_discountrules.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic" label="J2STORE_BASIC_SETTINGS">
                <field name="discount_note" type="customnotice"
                       label="J2STORE_APP_DISCOUNT_RULE_CUSTOM_NOTE"
                       addfieldpath="/administrator/components/com_j2store/models/fields"
                />
            </fieldset>
        </fields>
    </config>
</extension>
