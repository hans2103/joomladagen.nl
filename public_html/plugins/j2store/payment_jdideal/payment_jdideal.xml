<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" method="upgrade" group="j2store">
	<name>PLG_J2STORE_JDIDEAL_TITLE</name>
	<creationDate>28 November 2017</creationDate>
	<author>RolandD Cyber Produksi</author>
	<authorEmail>contact@jdideal.nl</authorEmail>
	<authorUrl>https://jdideal.nl</authorUrl>
	<copyright>Copyright (C) 2009 - 2017 RolandD Cyber Produksi. All rights reserved.</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<version>4.8.0</version>
	<description>PLG_J2STORE_JDIDEAL_DESCRIPTION</description>

	<scriptfile>script.php</scriptfile>

	<files>
		<filename plugin="payment_jdideal">payment_jdideal.php</filename>
		<folder>addons</folder>
		<folder>payment_jdideal</folder>
	</files>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_j2store_payment_jdideal.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_j2store_payment_jdideal.sys.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.plg_j2store_payment_jdideal.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.plg_j2store_payment_jdideal.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_jdidealgateway/models/fields">
				<field name="display_name" type="text" size="30" default="" label="j2store_plugin_display_name"
					   description="j2store_plugin_display_name_desc"/>
				<field name="display_image" type="media" label="j2store_plugin_display_image" description="j2store_plugin_display_image_desc"/>
				<field type="spacer" />
				<field name="geozone_id" type="geozonelist" default=""
				   label="J2STORE_GEOZONE_RESTRICTION" description="J2STORE_GEOZONE_RESTRICTION_DESC"
				   addfieldpath="/administrator/components/com_j2store/models/fields"
					/>
				<field name="profileAlias" type="jdideal.profile" label="PLG_J2STORE_JDIDEAL_PROFILE_ALIAS_LABEL" description="PLG_J2STORE_JDIDEAL_PROFILE_ALIAS_DESC" />
				<field name="onselection" type="textarea" cols="10" rows="5" default="" label="j2store_on_selection_label" description="j2store_on_selection_desc"/>
			</fieldset>
		</fields>
	</config>

	<updateservers>
		<server type="extension" priority="1" name="JD iDEAL Gateway - J2Store">https://jdideal.nl/updates/j2store.xml</server>
	</updateservers>

</extension>
