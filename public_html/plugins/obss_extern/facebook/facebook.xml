<?xml version="1.0" encoding="iso-8859-1"?>
<extension version="3.0" type="plugin" group="obss_extern" method="upgrade">
	<name>obSS - Extern - Facebook</name>
	<author>Phong Lo</author>
	<creationDate>Sep 2011</creationDate>
	<copyright>Copyright (C) 2007-2011 foobla.com. All rights reserved.</copyright>
	<authorEmail>contact@foobla.com</authorEmail>
	<authorUrl>http://foobla.com</authorUrl>
	<version>4.2.2</version>
	<license>GNU/GPL, see LICENSE</license>
	<description>PLG_OBSS_EXTERN_FACEBOOK_XML_DESCRIPTION</description>
	<files>
		<filename plugin="facebook">facebook.php</filename>
		<filename plugin="facebook">facebook.xml</filename>
		<filename>CHANGELOG</filename>
		<filename>facebook.png</filename>
		<filename>index.html</filename>
		<filename>LICENSE</filename>
		<filename>README</filename>
		<folder>elements</folder>
		<folder>language</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_obss_extern_facebook.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="setting" addfieldpath="/plugins/obss_extern/facebook/elements/">
				

				<field name="access_token" 
					type="fbconnect" 
					label="fbconnect" 
					description="fbconnect" 
					default="" />

				<field name="debug" 
					type="radio" 
					class="btn-group" 
					label="PLG_OBSS_EXTERN_FACEBOOK_DEBUG_LABEL" 
					description="PLG_OBSS_EXTERN_FACEBOOK_DEBUG_DESC" 
					default="0" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="uid" 
					type="hidden" 
					default=""/>

				<field type="text" 
					name="desc_len" 
					value="200" 
					label="PLG_OBSS_EXTERN_FACEBOOK_DESC_LEN_LABEL" 
					description="PLG_OBSS_EXTERN_FACEBOOK_DESC_LEN_DESC"/>

				<field name="post_type" 
					type="list" 
					default="default" 
					label="PLG_OBSS_EXTERN_FACEBOOK_POST_TYPE_LABEL" 
					description="PLG_OBSS_EXTERN_FACEBOOK_POST_TYPE_DESC">
					<option value="default">PLG_OBSS_EXTERN_FACEBOOK_POST_TYPE_VALUE_DEFAULT</option>
					<option value="msg_only">PLG_OBSS_EXTERN_FACEBOOK_POST_TYPE_VALUE_MSG_ONLY</option>
					<option value="share_link">PLG_OBSS_EXTERN_FACEBOOK_POST_TYPE_VALUE_SHARE_LINK</option>
				</field>

				<field type="text" 
					name="default_img" 
					value="" 
					label="PLG_OBSS_EXTERN_FACEBOOK_DEFAULT_IMG_LABEL" 
					description="PLG_OBSS_EXTERN_FACEBOOK_DEFAULT_IMG_DESC"/>
			</fieldset>
			<fieldset name="user_app_setting">
				<field name="app_appid" 
					type="text"
					label="PLG_OBSS_EXTERN_FACEBOOK_APP_APPID_LABEL" 
					description="PLG_OBSS_EXTERN_FACEBOOK_APP_APPID_DESC" 
					default="" />

				<field name="app_secret" 
					type="text" 
					label="PLG_OBSS_EXTERN_FACEBOOK_APP_SECRET_LABEL" 
					description="PLG_OBSS_EXTERN_FACEBOOK_APP_SECRET_DESC" 
					default="" />
			</fieldset>
		</fields>
	</config>
</extension>