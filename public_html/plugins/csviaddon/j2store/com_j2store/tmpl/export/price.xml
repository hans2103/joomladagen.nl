<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="jform">
		<fieldset name="multipleprices">
			<field name="customer_group"
			       type="Csvij2store.Customergroup"
			       size="7"
			       multiple="true"
			       class="advancedSelect"
			       default="none">
				<option value="none">COM_CSVI_DONT_USE</option>
			</field>

			<field name="quantity_start"
			       type="text"
			       class="input-mini" />

			<field name="priceoperator"
			       type="list"
			       size="1"
			       default="gt"
			       class="input-medium advancedSelect">
				<option value="gt">COM_CSVI_PRICE_GREATER_THAN</option>
				<option value="eq">COM_CSVI_PRICE_EQUAL</option>
				<option value="lt">COM_CSVI_PRICE_LOWER_THAN</option>
				<option value="bt">COM_CSVI_PRICE_BETWEEN</option>
			</field>

			<field name="pricefrom"
			       type="text"
			       class="input-mini" />

			<field name="priceto"
			       type="text"
			       class="input-mini" />

			<field name="date_from"
			       type="calendar"
			       format="%d-%m-%Y"
			       class="input-medium" />

			<field name="date_to"
			       type="calendar"
			       format="%d-%m-%Y"
			       class="input-medium" />
		</fieldset>
	</fields>
</form>
