<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
	<name>System - J2Store Canonical</name>
	<author>Sasi varna kumar</author>
	<creationDate>March 2017</creationDate>
	<copyright>Copyright (C) 2016 - 2020 http://j2store.org. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>support@j2store.org</authorEmail>
	<authorUrl>https://www.j2store.org</authorUrl>
	<version>1.2</version>
	<description> This plugin solves the duplicate URL problem in search engines by adding appropriate Canonical tags for J2Store products and Articles. </description>
	<files>
		<filename plugin="j2canonical">j2canonical.php</filename>
	</files>	
    <languages>
        <language tag="en-GB">languages/en-GB.plg_system_j2canonical.ini</language>
    </languages>
	<config>
	<fields name="params">
  	  <fieldset name="basic">  	  	
  	  	<field name="product_canonical_view" type="list" default="j2store" label="j2store_product_canonical_view" description="j2store_product_canonical_view_desc" >
          <option value="j2store">PLG_J2STORECANONICAL_J2STORE_PRODUCT_VIEW</option>
          <option value="content">PLG_J2STORECANONICAL_J2STORE_ARTICLE_VIEW</option>
        </field>
	</fieldset>
  </fields>	
</config>			
</extension>

