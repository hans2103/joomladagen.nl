<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath ="/administrator/components/com_jticketing/models/fields">
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="title"
				type="text"
				label="COM_JTICKETING_TICKET_TITLE"
				description="COM_JTICKETING_TICKET_TITLE_DESC"
				size="40"
				class="inputbox"
				required="true"
				validation="required"
				/>

		<field
				name="desc"
				type="textarea"
				label="COM_JTICKETING_TICKET_DESCRIPTION"
				description="COM_JTICKETING_TICKET_DESCRIPTION_DESC"
				class="inputbox"
				/>

		<field name="state" type="list" default="1" label="JSTATUS" description="COM_JTICKETING_TICKET_STATE_DESC" class="btn btn-group">
			<option value="1">COM_JTICKETING_PUBLISH</option>
			<option value="0">COM_JTICKETING_UNPUBLISH</option>
		</field>

		<field
				name="price"
				type="price"
				label="COM_JTICKETING_TICKET_PRICE"
				description="COM_JTICKETING_TICKET_PRICE_DESC"
				size="40"
				class="price inputbox validate-positive-number form-control"
				filter="integer"
				default="0"
				/>

		<field name="unlimited_seats" type="list" default="1" label="COM_JTICKETING_TICKET_SEATS_AVAILABLE" description="COM_JTICKETING_TICKET_SEATS_AVAILABLE_DESC" class="btn btn-group-yesno">
			<option value="1">COM_JTICKETING_TICKET_UNLIMITED_SEATS_YES</option>
			<option value="0">COM_JTICKETING_TICKET_UNLIMITED_SEATS_NO</option>
		</field>

		<field
			name="available"
			type="text"
			label="COM_JTICKETING_TICKET_NO_OF_SEATS"
			description="COM_JTICKETING_TICKET_NO_OF_SEATS_DESC"
			showon="unlimited_seats:0"
			size="20"
			class="inputbox"
			default=""
			/>

		<field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			size="1" />
	</fieldset>
</form>
