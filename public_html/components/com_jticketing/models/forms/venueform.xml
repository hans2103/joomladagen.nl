<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/components/com_jticketing/assets/elements">
		<field name="id"
			type="text"
			default="0"
			label="COM_JTICKETING_FORM_LBL_VENUE_ID"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
		/>

		<field name="created_by"
			type="createdby"
			default=""
			label="COM_JTICKETING_FORM_LBL_VENUE_CREATED_BY"
			description="COM_JTICKETING_FORM_DESC_VENUE_CREATED_BY"
		/>

		<field name="modified_by"
			type="modifiedby"
			default=""
			label="COM_JTICKETING_FORM_LBL_VENUE_MODIFIED_BY"
			description="COM_JTICKETING_FORM_DESC_VENUE_MODIFIED_BY"
		/>

		<field name="name"
			type="text"
			size="40"
			maxlength="255"
			class="inputbox required"
			label="COM_JTICKETING_FORM_LBL_VENUE_NAME"
			description="COM_JTICKETING_FORM_DESC_VENUE_NAME"
			required="true"
			filter="safehtml"
		/>

		<field name="alias" type="text" maxlength="255" label="COM_JTICKETING_FORM_LBL_VENUE_ALIAS" description="COM_JTICKETING_FORM_DESC_VENUE_ALIAS" filter="alias" />

		<field name="state" type="radio"
			label="COM_JTICKETING_PUBLISH_VENUE"
			description="COM_JTICKETING_PUBLISH_VENUE_DESC"
			required="true"
			class="inputbox radio" size="1" default="1">
			<option value="1">COM_JTICKETING_YES</option>
			<option value="0">COM_JTICKETING_NO</option>
		</field>

		<field name="venue_category"
			type="jtcategories"
			class="chzn-done required"
			default=""
			required="true"
			label="COM_JTICKETING_FORM_LBL_VENUE_CATEGORY"
			description="COM_JTICKETING_FORM_DESC_VENUE_CATEGORY"
		/>

		<field name="online" type="radio"
			label="COM_JTICKETING_FORM_LBL_ONLINE_VENUE"
			description="COM_JTICKETING_FORM_DESC_ONLINE_VENUE"
			class="inputbox radio" size="1" default="0">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="online_provider" default="plug_tjevents_adobeconnect" type="gatewayplgonlineevents" onchange="toggleProviderData(this)"
			class="inputbox required"
			required="true"
			label="COM_JTICKETING_ONLINE_EVENTS_PROVIDER"
			description="COM_JTICKETING_ONLINE_EVENTS_PROVIDER_DESC">
		</field>

		<field name="longitude"
			type="hidden"
			size="40"
			class="inputbox"
			label="COM_JTICKETING_FORM_LBL_VENUE_LONGITUDE"
			description="COM_JTICKETING_FORM_DESC_VENUE_LONGITUDE"
			filter="safehtml"
		/>

		<field name="latitude"
			type="hidden"
			size="40"
			class="inputbox"
			label="COM_JTICKETING_FORM_LBL_VENUE_LATITUDE"
			description="COM_JTICKETING_FORM_DESC_VENUE_LATITUDE"
			filter="safehtml"
		/>

		<field name="privacy"
			type="radio"
			class="inputbox radio"
			label="COM_JTICKETING_FORM_LBL_VENUE_PRIVACY"
			description="COM_JTICKETING_FORM_DESC_VENUE_PRIVACY"
			default="1"
		>
			<option value="1">COM_JTICKETING_VENUE_PRIVACY_PUBLIC</option>
			<option value="0">COM_JTICKETING_VENUE_PRIVACY_PRIVATE</option>
		</field>

		<field name="address"
			type="address"
			class="inputbox required"
			required="true"
			label="COM_JTICKETING_FORM_LBL_VENUE_ADDRESS"
			description="COM_JTICKETING_FORM_DESC_VENUE_ADDRESS"
		/>

		<field name="checked_out"
			type="hidden"
			filter="unset"
		/>

		<field name="checked_out_time"
			type="hidden"
			filter="unset"
		/>
	</fieldset>
</form>
